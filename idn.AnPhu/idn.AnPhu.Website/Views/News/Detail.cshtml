
@using System.Globalization
@using idn.AnPhu.Biz.Models
@using idn.AnPhu.Website.Extensions;
@model News
@{
    ViewBag.Title = Model.NewsTitle;
    var listcate = ViewBag.ListCates as List<NewsCategories>;
    var listother = ViewBag.ListOthers as List<News>;
    Layout = "~/Views/Shared/_ViewsLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $('.news-container img').addClass('img-responsive');
    });
</script>

<div class=" ">

    <!--<div class="" style="">
        <a class="floating-top" href="#"></a>
    </div>-->

</div>

<div class="container" style="margin-top: 22px;">
    <div class="" style="background-color: #f2f3f3; height: 17px;">


        <div class="col-sm-11 no-padding padding-detail">
            <a href="/" class="col-sm-1 no-padding width-forma-house" style="font-size: 12px; padding-right: 0">
                <img src="~/Images/forma-house2.png" />

            </a>


            <a class="col-sm-1 no-padding padding-detail" href="#" style="font-size: 12px; padding: 3px 0 0 0; width: 55px;">> Tin tức</a>



            @*<a class="col-sm-10 no-padding padding-detail" href="@Url.Action("ShowListCateNews", "News")" style="font-size:10px; padding:3px 0 0 0;"> Tin tức chung</a>*@
        </div>



    </div>
</div>

<div class="container">
    @if (listcate.Count > 0)
    {
        <div class="col-xs-12 no-padding" style="border-bottom: 2px solid #afafaf">
            <a class=" col-sm-2 col-xs-6 title-submenu submenu no-padding " href="@Url.Action("ShowListCateNews", "News")" style="text-align:center; margin-top:30px;font-size:14px; background:none;">
                Tin tức chung
            </a>
            @foreach (NewsCategories item1 in listcate)
            {
                <a class="col-xs-6 title-submenu2 submenu no-padding" href="@Url.Action("ShowCateNews", "News", new { shortname = item1.NewsCategoryShortName })">
                    @item1.NewsCategoryTitle
                </a>
            }

            <div class="col-sm-2 no-padding time-news">

                @{
                    string dt = System.DateTime.Now.DayOfWeek.ToString("");
                    DateTime now = DateTime.Now;
                    string date = now.GetDateTimeFormats('d')[0];
                    string time = now.GetDateTimeFormats('t')[0];
                    string my = DateTime.Now.ToString("dddd", new System.Globalization.CultureInfo("vi"));


                    <h1>@my, @date</h1>

                }


            </div>

        </div>

    }

</div>




<div class="container">
    <div class="col-sm-12 news-detail no-padding" style="">
        <div class="news-container col-sm-7" style="">
            <div class="col-md-12 no-padding">
                <h2 class="titlenewsdetail ">@Model.NewsTitle</h2>
                <div class="col-sm-12 datecount  no-padding">
                    <div class="col-sm-8">@Model.PublishDate.ToString("dd/MM/yyy HH:mm") | @Model.NewsCategoryTitle </div>

                    <div class="col-sm-4">

                        <div class="fb-like" data-href="" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
                    </div>
                </div>
            </div>
            <div class="newscontent">
                @MvcHtmlString.Create(Model.NewsBody)
            </div>
        </div>

        <div class="list-othernews col-sm-5">


            @if (listother != null && listother.Count > 0)
            {
                var n = 1;
                foreach (News item2 in listother)
                {
                    if (n < 5)
                    {
                        if (n == 1)
                        {
                            <div class="col-md-12 item-othernews2">
                                <div class="col-md-12 no-padding">
                                    <div class="img-other2">
                                        <a href="@Url.Action("Detail", "News", new { category = item2.NewsCategoryTitle.ToUrlSegment(280), shortname = item2.NewsShortName, newsid = item2.NewsId })">
                                            <img class="img-responsive lazy imgnews3-2" src="@item2.NewsImage" alt="@item2.NewsTitle" />
                                        </a>

                                    </div>
                                </div>

                                <div class="col-md-12 no-padding">

                                    <div class="detail-other2 ">

                                        <a href="@Url.Action("Detail", "News", new { category = item2.NewsCategoryTitle.ToUrlSegment(280), shortname = item2.NewsShortName, newsid = item2.NewsId })">
                                            <div class="myscroll">
                                                <h1 id="de1">
                                                    @item2.NewsTitle.ToTitleOnTable(52)
                                                </h1>
                                            </div>

                                        </a>

                                        <h4>
                                            @item2.PublishDate.ToString("dd/MM/yyy HH:mm") | @item2.NewsCategoryTitle
                                        </h4>
                                    </div>
                                </div>

                            </div>
                        }
                        else if (n == 2)
                        {

                            <div class="col-md-12 item-othernews2">

                                <div class="col-md-12 no-padding">
                                    <div class="img-other2">
                                        <a href="@Url.Action("Detail", "News", new { category = item2.NewsCategoryTitle.ToUrlSegment(280), shortname = item2.NewsShortName, newsid = item2.NewsId })">
                                            <img class="img-responsive lazy imgnews3-2" src="@item2.NewsImage" alt="@item2.NewsTitle" />
                                        </a>

                                    </div>
                                </div>

                                <div class="col-md-12 no-padding">
                                    <div class="detail-other2 ">

                                        <a href="@Url.Action("Detail", "News", new { category = item2.NewsCategoryTitle.ToUrlSegment(280), shortname = item2.NewsShortName, newsid = item2.NewsId })">
                                            <h2>
                                                @item2.NewsTitle.ToTitleOnTable(52)
                                            </h2>
                                        </a>

                                        <h4>
                                            @item2.PublishDate.ToString("dd/MM/yyy HH:mm") | @item2.NewsCategoryTitle
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (n == 3)
                        {
                            <div class="col-md-12 item-othernews2">

                                <div class="col-md-12 no-padding">
                                    <div class="img-other2">
                                        <a href="@Url.Action("Detail", "News", new { category = item2.NewsCategoryTitle.ToUrlSegment(280), shortname = item2.NewsShortName, newsid = item2.NewsId })">
                                            <img class="img-responsive imgnews3-2" src="@item2.NewsImage" alt="@item2.NewsTitle" />
                                        </a>

                                    </div>
                                </div>

                                <div class="col-md-12 no-padding">
                                    <div class="detail-other2 ">

                                        <a href="@Url.Action("Detail", "News", new { category = item2.NewsCategoryTitle.ToUrlSegment(280), shortname = item2.NewsShortName, newsid = item2.NewsId })">
                                            <h2>
                                                @item2.NewsTitle.ToTitleOnTable(52)
                                            </h2>
                                        </a>

                                        <h4>
                                            @item2.PublishDate.ToString("dd/MM/yyy HH:mm") | @item2.NewsCategoryTitle
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (n == 4)
                        {
                            <div class="col-md-12 item-othernews2">


                                <div class="col-md-12 no-padding">
                                    <div class="img-other2">
                                        <a href="@Url.Action("Detail", "News", new { category = item2.NewsCategoryTitle.ToUrlSegment(280), shortname = item2.NewsShortName, newsid = item2.NewsId })">
                                            <img class="img-responsive lazy imgnews3-2" src="@item2.NewsImage" alt="@item2.NewsTitle" />
                                        </a>

                                    </div>
                                </div>

                                <div class="col-md-12 no-padding">
                                    <div class="detail-other2 ">

                                        <a href="@Url.Action("Detail", "News", new { category = item2.NewsCategoryTitle.ToUrlSegment(280), shortname = item2.NewsShortName, newsid = item2.NewsId })">
                                            <h2>
                                                @item2.NewsTitle.ToTitleOnTable(52)
                                            </h2>
                                        </a>

                                        <h4>
                                            @item2.PublishDate.ToString("dd/MM/yyy HH:mm") | @item2.NewsCategoryTitle
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        }


                        n++;
                    }
                }
            }
        </div>
    </div>


    <div class="col-sm-12 no-padding hidden-xs" style="margin-bottom: 20px;">
        <div class="col-sm-7 no-padding">
            <a href="@Url.Action("ShowCateNews", "News", new { shortname = ViewBag.categoryshortname })" class="col-sm-8 back-detail-move" style="">
                Về trang danh mục
            </a>

            <a href="#" class="col-sm-4 top-detail-move" style="">
                Lên đầu trang

            </a>

        </div>
    </div>

    <script type="text/javascript">
        setAdminCurrentUrl('@Url.Action("ShowCateNews", "News", new { shortname = ViewBag.categoryshortname })', '@Url.Action("ShowListCateNews", "News")');
    </script>

    <script type="text/javascript">
        $('.top-detail-move').click(function () {
            $('html, body').animate({ scrollTop: 0 }, 800);
            return false;
        });
    </script>
</div>






