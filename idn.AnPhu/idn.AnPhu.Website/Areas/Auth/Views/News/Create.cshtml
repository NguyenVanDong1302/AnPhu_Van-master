        }*@

        var message = '@MvcHtmlString.Create(message)';

        $(document).ready(function () {
            if (message.trim() != null && message.trim() != '') {
                alert(message);
                window.location.href = '/vi/quan-tri/danh-sach-tin-tuc/danh-sach';
            }
        })
    </script>



}



